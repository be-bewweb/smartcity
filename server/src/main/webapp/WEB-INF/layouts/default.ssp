<!DOCTYPE html>

<%@ var body: String %>
<%@ var title: String = "SmartCity" %>
<%@ var customScriptPath : String %>

<html>

<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>${title}</title>
<!-- Bootstrap Core CSS -->
<link href="${uri("/resources/vendor/bootstrap/css/bootstrap.min.css")}" rel="stylesheet">
<!-- MetisMenu CSS -->
<link href="${uri("/resources/vendor/metisMenu/metisMenu.min.css")}" rel="stylesheet">
<!-- Custom CSS -->
<link href="${uri("/resources/css/sb-admin-2.css")}" rel="stylesheet">
<!-- Morris Charts CSS -->
<link href="${uri("/resources/vendor/morrisjs/morris.css") }" rel="stylesheet">
<!-- Custom Fonts -->
<link href="${uri("/resources/vendor/font-awesome/css/font-awesome.css") }" rel="stylesheet" type="text/css">
</head>


<body>
    <div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">${title}</a>
        </div><!-- /.navbar-header -->

        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <a href=""><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="#sensors"><i class="fa fa-bar-chart-o fa-fw"></i> Sensors<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                        <li>
                            <a href="#temp">Temperature</a>
                        </li>
                        <li>
                            <a href="#hum">Humidity</a>
                        </li>
                        <li>
                            <a href="#pres">Presence</a>
                        </li>
                        </ul><!-- /.nav-second-level -->
                    </li>
                    <li>
                        <a href="#sensors"><i class="fa fa-cogs fa-fw"></i> Actors<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                        <li>
                            <a href="${uri("/actors/init")}">Start</a>
                        </li>
                        <li>
                            <a href="${uri("/actors/stop")}">Stop</a>
                        </li>
                        </ul><!-- /.nav-second-level -->
                    </li>
                </ul>
            </div><!-- /.sidebar-collapse -->
        </div><!-- /.navbar-static-side -->
    </nav><!-- /.navbar-->

    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">

            ${unescape(body)}

        </div><!-- /.container-fluid -->
    </div><!-- /#page-wrapper -->
    </div><!-- /#wrapper -->

    <!-- jQuery -->
    <script src="${uri("/resources/vendor/jquery/jquery.min.js")}"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="${uri("/resources/vendor/bootstrap/js/bootstrap.min.js")}"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="${uri("/resources/vendor/metisMenu/metisMenu.min.js")}"></script>
    <!-- Custom Theme JavaScript -->
    <script src="${uri("/resources/js/sb-admin-2.js")}"></script>
    <!-- Custom script-->
    <script type="text/javascript" src="${uri(customScriptPath)}"></script>
</body>
</html>