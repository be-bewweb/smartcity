    "/zones/{name}/close": {
      "post": {
        "tags": [
          "Zones"
        ],
        "summary": "Close a specific zone",
        "description": "",
        "operationId": "closeZone",
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "description": "The name of the zone",
            "required": true,
            "type": "string"
          },
          {
            "name": "full_name",
            "in": "formData",
            "description": "The full name of the zone",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
